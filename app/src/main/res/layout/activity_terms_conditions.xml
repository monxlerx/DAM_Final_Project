            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/terms_paragraph"
                android:text="@string/second_para_1" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>