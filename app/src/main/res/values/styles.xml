<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="fontFamily">@font/cera_pro_regular</item>
    </style>

    <!--Action Bar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Select a new color for the hamburger-->
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorToolbarText</item>
    </style>

    <!--Select a new color and font for the text in the toolbar-->
    <style name="ToolBarStyle">
        <item name="android:textColorPrimary">@color/colorToolbarText</item>
    </style>

    <!--Navigation Drawer-->
    <style name="NavDrawer">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="fontFamily">@font/cera_pro_bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="NavDrawerText">
        <item name="android:textColor">@color/colorNavigationText</item>
    </style>

    <!--Menu Bar Fragment-->
    <style name="MenuCardsTextTop">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MenuCards">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">12dp</item>

    </style>

    <style name="MenuCardsTextView">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorMenuBar</item>
    </style>

    <!--TextView-->
    <style name="TextViewIntro">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!--Radiogroup-->
    <style name="RadioGroup">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!--Feedback Button Style-->
    <style name="FeedbackButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--Terms and Conditions-->
    <style name="terms_title">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14dp</item>

    </style>

    <style name="terms_bullet">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorNavigationText</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="terms_paragraph">
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <!--About us-->
    <style name="about_us_bullet">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorNavigationText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="about_us_paragraph">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="about_us_image_1">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="about_us_image_2">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

</resources>
